{{template "base" .}}

{{define "title"}}
    <title>About</title>
{{end}}


{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1> This is the about page </h1>
                <p> This is some text </p>

                <p> This came from the template: {{index .StringMap "test"}} </p>
                <p> 
                    {{if ne (index .StringMap "remote_ip") ""}}
                        Your  remote IP is {{index .StringMap "remote_ip"}}
                    {{else}}
                        Your remote IP is unknown yet. Visit the <a href="/">Home</a> page to find out.
                    {{end}}
                </p>
            </div>
        </div>
    </div>
{{end}}